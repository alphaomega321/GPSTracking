<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sdlabs.gpstracking.change_username"
    android:background="@drawable/backnew">

    <TextView
        android:text="Change username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/textView21"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/edittextstyle"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/old_username"
        android:textSize="18sp"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/new_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter old username"
        android:textAlignment="center" />

    <Button
        android:text="  Change username  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameButton"
        android:textSize="18sp"
        android:background="@drawable/buttonback"
        android:elevation="24dp"
        android:onClick="OnUsername"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/edittextstyle"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/new_username"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/usernameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter new username"
        android:textAlignment="center" />

</RelativeLayout>
